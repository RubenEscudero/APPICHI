<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="APPICHI.Views.Home.EditDayPlanView"
             Title="EditDayPlan">
    <ScrollView>
        <Grid BackgroundColor="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0"
                Grid.Column="0"
                TextColor="White"
                HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{mi:Cupertino Icon=ArrowDown}" FontSize="Small"/>
                        <Span Text=" EDITA EL PLAN DEL DÃA "/>
                        <Span Text="{mi:Cupertino Icon=ArrowDown}" FontSize="Small"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Grid.Row="1"
                Grid.Column="0"   
                TextColor="White"
                HorizontalTextAlignment="Center"
                Text="COMIDA"/>
            <Entry Grid.Row="2"
                Grid.Column="0"   
                x:Name="FirstDishMeal"
                TextColor="White"
                Placeholder="Primer plato"
                HorizontalOptions="Center"
                MaximumHeightRequest="50"
                Text="{Binding CurrentDayPlan.foods[0].FirstDish}"/>
            <Entry Grid.Row="3"
                Grid.Column="0"   
                x:Name="SecondDishMeal"
                TextColor="White"
                Placeholder="Segundo plato"
                HorizontalOptions="Center"
                MaximumHeightRequest="50"
                Text="{Binding CurrentDayPlan.foods[0].SecondDish}"/>
            <Entry Grid.Row="4"
                Grid.Column="0"   
                x:Name="DessertMeal"
                TextColor="White"
                Placeholder="Postre"
                HorizontalOptions="Center"
                MaximumHeightRequest="50"
                Text="{Binding CurrentDayPlan.foods[0].Dessert}"/>
            <Label Grid.Row="5"
                Grid.Column="0"   
                TextColor="White"
                HorizontalTextAlignment="Center"
                Text="CENA"
                Margin="0, 10, 0, 0"/>
            <Entry Grid.Row="6"
                Grid.Column="0"   
                x:Name="FirstDishDinner"
                TextColor="White"
                Placeholder="Primer plato"
                HorizontalOptions="Center"
                MaximumHeightRequest="50"
                Text="{Binding CurrentDayPlan.foods[1].FirstDish}"/>
             <Entry Grid.Row="7"
                Grid.Column="0"   
                x:Name="SecondDishDinner"
                TextColor="White"
                Placeholder="Segundo plato"
                HorizontalOptions="Center"
                MaximumHeightRequest="50"
                Text="{Binding CurrentDayPlan.foods[1].SecondDish}"/>
            <Entry Grid.Row="8"
               Grid.Column="0"   
               x:Name="DessertDinner"
               TextColor="White"
               Placeholder="Postre"
               HorizontalOptions="Center"
               MaximumHeightRequest="50"
               Text="{Binding CurrentDayPlan.foods[1].Dessert}"/>
            <Label Grid.Row="9"
                Grid.Column="0"   
                TextColor="White"
                HorizontalTextAlignment="Center"
                Text="NOTAS"
                Margin="0, 10, 0, 0"/>
            <Entry Grid.Row="10"
                Grid.Column="0"   
                x:Name="Notes"
                TextColor="White"
                Placeholder="Notas"
                HorizontalOptions="Center"
                MaximumHeightRequest="50"
                Text="{Binding CurrentDayPlan.notes}"/>
            <Button Grid.Row="11"
                Grid.Column="0"
                MaximumWidthRequest="200"
                Text="Guardar cambios"
                Margin="0, 10, 0, 0"
                Clicked="SaveEditDayPlan"/>
        </Grid>
    </ScrollView>
</ContentPage>