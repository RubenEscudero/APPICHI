<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="APPICHI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:APPICHI"
    xmlns:views="clr-namespace:APPICHI.Views"
    FlyoutHeaderBehavior="Fixed"
    Shell.NavBarIsVisible="False"
    Title="APPICHI">
    <TabBar>
        <Tab Title="Mobility"
            Icon="viaje_en_tren.png">
            <ShellContent ContentTemplate="{DataTemplate views:Mobility}" />
        </Tab>
        <Tab Title="Home"
            Icon="corazon_de_chimenea_de_casa.png">
            <ShellContent ContentTemplate="{DataTemplate views:Home}" />
        </Tab>
    </TabBar>
</Shell>
